{
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      },
      "babel-module": {}
    }
  },
  "extends": ["airbnb", "plugin:react/recommended", "plugin:prettier/recommended", "prettier/react"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-one-expression-per-line": "off",
    "import/prefer-default-export": "off",
    "camelcase": "off",
    "import/no-cycle": [
      2,
      {
        "maxDepth": 1
      }
    ],
    "react/jsx-wrap-multilines": [
      "error",
      {
        "declaration": false,
        "assignment": false
      }
    ],
    "react/prop-types": [
      "error",
      {
        "ignore": ["children"]
      }
    ]
  }
}
